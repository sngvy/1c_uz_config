
Процедура Печать(ТабДок, Ссылка) Экспорт
	//{{_КОНСТРУКТОР_ПЕЧАТИ(Печать)
	Макет = Документы.ГарантийноеПисьмо.ПолучитьМакет("Печать");
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ГарантийноеПисьмо.Ссылка КАК Ссылка,
	|	ГарантийноеПисьмо.ВерсияДанных КАК ВерсияДанных,
	|	ГарантийноеПисьмо.ПометкаУдаления КАК ПометкаУдаления,
	|	ГарантийноеПисьмо.Номер КАК Номер,
	|	ГарантийноеПисьмо.Дата КАК Дата,
	|	ГарантийноеПисьмо.Проведен КАК Проведен,
	|	ГарантийноеПисьмо.Договор КАК Договор,
	|	ГарантийноеПисьмо.Должник КАК Должник,
	|	ГарантийноеПисьмо.Цедент КАК Цедент,
	|	ГарантийноеПисьмо.ДатаЦессии КАК ДатаЦессии,
	|	ГарантийноеПисьмо.ДоговорЦессии КАК ДоговорЦессии,
	|	ГарантийноеПисьмо.ДатаВыдачи КАК ДатаВыдачи,
	|	ГарантийноеПисьмо.ТекущаяДата КАК ТекущаяДата,
	|	ГарантийноеПисьмо.ДолгПоТелу КАК ДолгПоТелу,
	|	ГарантийноеПисьмо.ДолгПоПроцентам КАК ДолгПоПроцентам,
	|	ГарантийноеПисьмо.ПениШтрафы КАК ПениШтрафы,
	|	ГарантийноеПисьмо.Сумма КАК Сумма,
	|	ГарантийноеПисьмо.ДатаРождения КАК ДатаРождения,
	|	ГарантийноеПисьмо.ДнейПросрочки КАК ДнейПросрочки,
	|	ГарантийноеПисьмо.ДнейПросрочкиОбщее КАК ДнейПросрочкиОбщее
	|ИЗ
	|	Документ.ГарантийноеПисьмо КАК ГарантийноеПисьмо
	|ГДЕ
	|	ГарантийноеПисьмо.Ссылка В(&Ссылка)";
	Запрос.Параметры.Вставить("Ссылка", Ссылка);
	Выборка = Запрос.Выполнить().Выбрать();

	ОбластьЗаголовок = Макет.ПолучитьОбласть("Заголовок");
	Тело = Макет.ПолучитьОбласть("Тело");
	ТабДок.Очистить();

	ВставлятьРазделительСтраниц = Ложь;
	Пока Выборка.Следующий() Цикл
		Если ВставлятьРазделительСтраниц Тогда
			ТабДок.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;

		ТабДок.Вывести(ОбластьЗаголовок);

		Тело.Параметры.Заполнить(Выборка);
		ФорматДаты = "ДФ=dd.MM.yyyy";
		Тело.Параметры.Дата = Формат(Выборка.Дата, ФорматДаты);
		Тело.Параметры.ДатаЦессии = Формат(Выборка.ДатаЦессии, ФорматДаты);
		Тело.Параметры.ДатаВыдачи = Формат(Выборка.ДатаВыдачи, ФорматДаты);
		Тело.Параметры.ДатаРождения = Формат(Выборка.ДатаРождения, ФорматДаты);
		ТабДок.Вывести(Тело, Выборка.Уровень());

		ВставлятьРазделительСтраниц = Истина;
	КонецЦикла;
	//}}
