	Ном = 1;
	Об = РеквизитФормыВЗначение("Объект");
	Пока Истина Цикл
		Попытка
			СтрПоиск = Об.ПолучитьМакет("Поиск" + Формат(Ном, "ЧН=")).ПолучитьТекст();
			СтрЗамена = Об.ПолучитьМакет("Замена" + Формат(Ном, "ЧН=")).ПолучитьТекст();
		Исключение
			Прервать;
		КонецПопытки;
		Стр = СтрЗаменить(Стр, СтрПоиск, СтрЗамена);
		Ном = Ном + 1;
	КонецЦикла;
	
	//
	РезультирующийТекст.УстановитьТекст(Стр);
КонецПроцедуры
