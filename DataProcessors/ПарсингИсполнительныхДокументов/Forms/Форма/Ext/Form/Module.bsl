		//КонецЕсли;
	Иначе 
		мВсеСловаПоиска = сТекста.мВсеСловаПоиска;
		СловаКолВо = мВсеСловаПоиска.ВГраница();
		
		НайденНомерИЛ = мВсеСловаПоиска.Найти("ЕстьИЛСерия");
		
