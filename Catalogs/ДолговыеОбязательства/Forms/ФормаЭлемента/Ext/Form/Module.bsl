		НоваяЗадача.КонтрагентКЛ = ЭтаФорма.Должник;
		НоваяЗадача.Открыть();
		ФормаСМС.ОткрытьМодально();
	Иначе
		Предупреждение("Не выбран контакт для отправки!",,"Отправка СМС");
