	Диалог.Заголовок = НСтр("ru = 'Укажите файл для сохранения результата преобразования'");
	Диалог.Фильтр= НСтр("ru = 'Текстовые файлы (*.txt)|*.txt|Все файлы (*.*)|*.*'");
	
	Если Диалог.Выбрать() Тогда

		ИсходныйФайл = Диалог.ПолноеИмяФайла;

	КонецЕсли;

КонецПроцедуры

